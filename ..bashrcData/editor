# vscode software
alias vscode=code

# gedit Makefile in current path
gdmakefile(){
    gd ./Makefile
}

# open ~/.profile with gedit and source if shutdowm
# gdprofile(){
# gd ~/.profile
# command source ~/.profile
# }

# which means my note
gdman(){
    gd ~/..mynote
}

# customized terminal hotkey
gdinputrc(){
    if [[ $(echo $SSH_CONNECTION) = "" ]];then
        gedit ~/.inputrc 
    else 
        code ~/.inputrc --wait
    fi
    bind -f ~/.inputrc
}

# use gedit in child-process
# vscode for window11 ssh-link
gd(){
    if [[ $(echo $SSH_CONNECTION) = "" ]];then
        gedit "$@" &
    else 
        code "$@" 
    fi
}
# wait for gedit or code to finish
gdwait(){
    if [[ $(echo $SSH_CONNECTION) = "" ]];then
        gedit "$@" 
    else 
        code "$@" --wait
    fi
}

# use vim
vi(){
    vim "$@" 
}

# divide bashrc below----------------------
alias TERMINAL='gdTERMINAL'
alias PATH='gdPATH'
alias PROXY='gdPROXY'
alias OVERRIDE='gdOVERRIDE'
alias WRONG='gdWRONG'
alias EDITOR='gdEDITOR'
alias CUSTOMIZED='gdCUSTOMIZED' 
alias APT='gdAPT'
alias GIT='gdGIT'
alias PIP='gdPIP'
alias LANGUAGE='gdLANGUAGE'


gdTERMINAL() {
	gdwait ~/..bashrcData/terminal
	source ~/..bashrcData/terminal
}

gdPATH() {
	gdwait ~/..bashrcData/path
	source ~/..bashrcData/path
}

gdPROXY() {
	gdwait ~/..bashrcData/proxy
	source ~/..bashrcData/proxy
}

gdOVERRIDE() {
	gdwait ~/..bashrcData/override
	source ~/..bashrcData/override
}

gdWRONG() {
	gdwait ~/..bashrcData/wrong
	source ~/..bashrcData/wrong
}

gdEDITOR() {
	gdwait ~/..bashrcData/editor
	source ~/..bashrcData/editor
}

gdCUSTOMIZED() {
	gdwait ~/..bashrcData/customized
	source ~/..bashrcData/customized
}

gdAPT() {
	gdwait ~/..bashrcData/apt
	source ~/..bashrcData/apt
}

gdGIT() {
	gdwait ~/..bashrcData/git
	source ~/..bashrcData/git
}

gdPIP() {
	gdwait ~/..bashrcData/pip
	source ~/..bashrcData/pip
}

gdLANGUAGE() {
	gdwait ~/..bashrcData/language
	source ~/..bashrcData/language
}
